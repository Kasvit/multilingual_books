<% if @chapter.errors.empty? %>
  <%= turbo_stream.prepend 'admin_chapters', @chapter %>
  <%= turbo_stream.remove 'modal' %>
<% else %>
  <%= turbo_stream.update "modal" do %>
    <div class="modal">
      <div class="modal-content">
        <h2 class="text-2xl font-bold mb-4">New Chapter</h2>
        <%= render "form", chapter: @chapter %>
      </div>
    </div>
  <% end %>
<% end %>
<%= turbo_stream.prepend "flash", partial: "shared/flash" %>

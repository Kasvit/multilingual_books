<% if @chapter.errors.empty? %>
  <%= turbo_stream.append 'chapters', partial: 'chapter', locals: { chapter: @chapter } %>
  <%= turbo_stream.remove 'modal' %>
<% else %>
  <%= turbo_stream.update "modal" do %>
    <div class="modal">
      <div class="modal-content">
        <h2 class="text-2xl font-bold mb-4">New Chapter</h2>
        <%= render "form", chapter: @chapter %>
      </div>
    </div>
  <% end %>
<% end %>
<%= turbo_stream.append 'flash', partial: 'shared/flash', locals: { flash: flash } %>

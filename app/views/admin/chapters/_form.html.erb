<%= form_with(model: [:admin, @book, chapter], class: "space-y-4") do |form| %>
  <% if chapter.errors.any? %>
    <div class="bg-red-50 p-4 rounded-lg">
      <h2 class="text-red-700 text-lg font-semibold">
        <%= pluralize(chapter.errors.count, "error") %> prohibited this chapter from being saved:
      </h2>
      <ul class="list-disc list-inside text-red-600">
        <% chapter.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :position, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :position,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div class="flex justify-end space-x-2">
    <%= form.submit class: "btn btn-primary" %>
    <% if @chapter.persisted? %>
      <%= link_to "Cancel", admin_book_chapter_path(@book, @chapter), class: "btn btn-ghost", data: { turbo: false } %>
    <% else %>
      <%= link_to "Cancel", admin_book_path(@book), class: "btn btn-ghost", data: { turbo: false } %>
    <% end %>
  </div>
<% end %>

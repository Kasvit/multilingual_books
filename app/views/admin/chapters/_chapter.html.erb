<%= turbo_frame_tag dom_id(chapter, :admin) do %>
  <div class="bg-gray-50 rounded-lg p-4">
    <div class="flex justify-between items-center">
      <div>
        <h3 class="font-semibold"><%= chapter.position %>. <%= chapter.title %></h3>
      </div>

      <div class="flex space-x-2">
        <%= link_to "View", admin_book_chapter_path(chapter.book, chapter.id),
            class: "btn btn-ghost text-sm",
            data: { turbo: false } %>
        <%= link_to "Edit", edit_admin_book_chapter_path(chapter.book, chapter.id),
            class: "btn btn-ghost text-sm",
            data: { turbo_stream: true } %>
        <%= button_to "Delete", admin_book_chapter_path(chapter.book, chapter.id),
            method: :delete,
            class: "btn btn-error text-sm",
            form: { data: { turbo_confirm: "Are you sure?" } } %>
      </div>
    </div>
  </div>
<% end %>

<%= form_with(model: [:admin, @book, chapter], class: "space-y-4 w-96") do |form| %>
  <div>
    <%= form.label :position, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :position,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    <% if chapter.errors[:position].any? %>
      <p class="text-red-500 text-sm mt-1"><%= chapter.errors[:position].join(', ') %></p>
    <% end %>
  </div>

  <div class="mt-4 flex justify-end">
    <%= form.submit "Save", class: "btn btn-primary" %>
    <%= button_tag "Cancel", type: "button", data: { action: "modal#close" }, class: "btn btn-ghost" %>
  </div>
<% end %>

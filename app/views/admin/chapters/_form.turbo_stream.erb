<%= form_with(model: [:admin, @book, chapter], url: @chapter.persisted? ? admin_book_chapter_path(@book, chapter.id) : admin_book_chapters_path(@book), class: "space-y-4 w-96") do |form| %>
  <div>
    <%= form.label :position, class: "block text-sm font-medium text-gray-700" %>
    <%= form.number_field :position,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    <% if chapter.errors[:position].any? %>
      <p class="text-red-500 text-sm mt-1"><%= chapter.errors[:position].join(', ') %></p>
    <% end %>
  </div>
  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        <% if chapter.errors[:title].any? %>
      <p class="text-red-500 text-sm mt-1"><%= chapter.errors[:title].join(', ') %></p>
    <% end %>
  </div>
  <div>
    <%= form.label :content, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :content, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    <% if chapter.errors[:content].any? %>
      <p class="text-red-500 text-sm mt-1"><%= chapter.errors[:content].join(', ') %></p>
    <% end %>
  </div>

  <div class="mt-4 flex justify-end">
    <%= form.submit "Save", class: "btn btn-primary" %>
    <%= button_tag "Cancel", type: "button", data: { action: "modal#close" }, class: "btn btn-ghost" %>
  </div>
<% end %>

<div id="chapter_translations">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-xl font-semibold">Translations</h2>
    <% available_languages = @chapter.book.selected_languages - @chapter.chapter_translations.pluck(:language) %>
    <% if available_languages.any? %>
      <div class="relative inline-block">
        <select onchange="window.location.href=this.value"
                class="appearance-none bg-white border border-gray-300 rounded-md pl-3 pr-10 py-2 text-sm focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 cursor-pointer">
          <option value="">Add Translation</option>
          <% available_languages.each do |lang| %>
            <option value="<%= new_admin_book_chapter_chapter_translation_path(@book, @chapter, language: lang) %>">
              Add <%= lang.upcase %>
            </option>
          <% end %>
        </select>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700">
          <svg class="h-4 w-4 fill-current" viewBox="0 0 20 20">
            <path d="M7 7l3-3 3 3m0 6l-3 3-3-3" stroke="currentColor" stroke-width="1.5" fill="none"/>
          </svg>
        </div>
      </div>
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    <% @chapter.chapter_translations.each do |translation| %>
      <div class="bg-gray-50 rounded-lg p-4">
        <div class="flex justify-between items-center mb-2">
          <span class="font-semibold"><%= translation.language.upcase %></span>
          <div class="flex space-x-2">
            <%= link_to "Edit",
                edit_admin_book_chapter_chapter_translation_path(@book, @chapter, translation.language),
                class: "btn-secondary",
                data: { turbo_frame: "modal" } %>
            <%= button_to "Remove",
                admin_book_chapter_chapter_translation_path(@book, @chapter, translation.language),
                method: :delete,
                class: "btn-danger",
                form: { data: { turbo_confirm: "Are you sure?" } } %>
          </div>
        </div>
        <div class="mb-2">
          <span class="text-gray-600">Title:</span>
          <div class="ml-2"><%= translation.title %></div>
        </div>
        <div>
          <span class="text-gray-600">Content:</span>
          <div class="ml-2 mt-2 prose max-w-none">
            <%= translation.content || "No content yet" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

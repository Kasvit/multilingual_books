<% if @translation.errors.empty? %>
  <%= turbo_stream.prepend "admin_book_#{@book.id}_translations", partial: 'admin/book_translations/book_translation', locals: { book: @book, translation: @translation } %>
  <%= turbo_stream.remove 'modal' %>
<% else %>
  <%= turbo_stream.update "modal" do %>
    <div class="modal">
      <div class="modal-content">
        <h2 class="text-2xl font-bold mb-4">New Translation</h2>
        <%= render "form", translation: @translation %>
      </div>
    </div>
  <% end %>
<% end %>
<%= turbo_stream.append 'flash', partial: 'shared/flash', locals: { flash: flash } %>

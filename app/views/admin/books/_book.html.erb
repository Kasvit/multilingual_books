<%= turbo_frame_tag dom_id(book, :admin) do %>
  <div class="bg-white rounded-lg shadow p-6">
    <div class="space-y-4">

      <div class="flex items-center gap-2">
        <span class="text-sm text-gray-500"><%= book.language %></span>
        <h3 class="text-lg font-semibold"><%= book.title %></h3>
        <% if book.translations.exists? %>
          <span class="text-sm text-gray-500"><%= book.translations.count %> translations</span>
        <% end %>
      </div>


      <div class="flex gap-2">
        <%= link_to "View", admin_book_path(book), class: "btn btn-info", data: { turbo: false } %>
        <%= link_to "New translation", new_translation_admin_book_path(book), class: "btn btn-primary", data: { turbo_stream: true } %>
        <%= link_to "Edit", edit_admin_book_path(book),
            class: "btn btn-warning",
            data: { turbo_stream: true } %>
        <%= button_to "Delete", admin_book_path(book), method: :delete, class: "btn btn-error", data: { turbo_confirm: 'Are you sure?' } %>
      </div>
    </div>
  </div>
<% end %>

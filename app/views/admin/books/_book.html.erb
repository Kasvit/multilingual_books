<%= turbo_frame_tag dom_id(book, :admin) do %>
  <div class="bg-white rounded-lg shadow p-6">
    <div class="space-y-4">
      <div>
        <% book.book_translations.each do |translation| %>
          <div class="flex items-center gap-2">
            <span class="text-sm text-gray-500"><%= translation.language %></span>
            <h3 class="text-lg font-semibold"><%= translation.title %></h3>
          </div>
        <% end %>
      </div>

      <p class="text-gray-600"><%= book.isbn %></p>

      <div class="mb-4">
        <strong>Selected Languages:</strong>
        <%=book.selected_languages.join(", ") %>
      </div>

      <div class="flex gap-2">
        <%= link_to "View", admin_book_path(book), class: "btn btn-ghost", data: { turbo: false } %>
        <%= link_to "Edit", edit_admin_book_path(book),
            class: "btn btn-ghost",
            data: { turbo_frame: "modal" } %>
        <%= button_to "Delete", admin_book_path(book), method: :delete, class: "btn btn-error", form: { data: { turbo_confirm: "Are you sure?" } } %>
      </div>
    </div>
  </div>
<% end %>

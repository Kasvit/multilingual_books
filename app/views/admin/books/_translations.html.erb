<div id="book_translations">
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-xl font-semibold">Translations</h2>
    <% available_languages = @book.selected_languages - @book.book_translations.pluck(:language) %>
    <% if available_languages.any? %>
      <div class="relative inline-block">
        <select onchange="window.location.href=this.value"
                class="appearance-none bg-white border border-gray-300 rounded-md pl-3 pr-10 py-2 text-sm focus:outline-none focus:ring-1 focus:ring-blue-500 focus:border-blue-500 cursor-pointer">
          <option value="">Add Translation</option>
          <% available_languages.each do |lang| %>
            <option value="<%= new_admin_book_book_translation_path(@book, language: lang) %>">
              Add <%= lang.upcase %>
            </option>
          <% end %>
        </select>
      </div>
    <% end %>
  </div>

  <div class="space-y-4">
    <% @book.book_translations.each do |translation| %>
      <div class="bg-gray-50 rounded-lg p-4">
        <div class="flex justify-between items-center">
          <strong><%= translation.language.upcase %></strong>
          <div class="flex space-x-2">
            <%= link_to "Edit",
                edit_admin_book_book_translation_path(@book, translation.language),
                class: "btn-secondary",
                data: { turbo_frame: "modal" } %>
            <%= button_to "Remove",
                admin_book_book_translation_path(@book, translation.language),
                method: :delete,
                class: "btn-danger",
                form: { data: { turbo_confirm: "Are you sure?" } } %>
          </div>
        </div>
        <div class="mt-2">
          <div class="mb-1"><span class="text-gray-600">Title:</span> <%= translation.title %></div>
          <div><span class="text-gray-600">Description:</span> <%= translation.description %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>

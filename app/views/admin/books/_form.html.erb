<%= form_with(
      model: book,
      url: book.new_record? ? admin_books_path : admin_book_path(book),
      class: "space-y-4",
      data: { turbo: true }
    ) do |form| %>
  <% if book.errors.any? %>
    <div class="bg-red-50 p-4 rounded-lg">
      <h2 class="text-red-700 text-lg font-semibold"><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul class="list-disc list-inside text-red-600">
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :isbn, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :isbn, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
  </div>

  <div>
    <%= form.label :selected_languages, class: "block text-sm font-medium text-gray-700" %>
    <%= form.select :selected_languages,
                   Book::AVAILABLE_LANGUAGES,
                   { selected: book.selected_languages },
                   { multiple: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" } %>
  </div>

  <div class="flex justify-end space-x-2">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancel",
        book.new_record? ? admin_books_path : admin_book_path(book),
        class: "btn btn-ghost",
        data: {
          action: "click->modal#close",
          turbo_frame: "_top"
        } %>
  </div>
<% end %>

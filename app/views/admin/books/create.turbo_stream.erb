<% if @book.errors.empty? %>
  <%= close_modal %>
  <%= turbo_stream.prepend "admin_books", @book %>
  <%= turbo_stream.prepend "books", @book %>
  <%= turbo_stream.prepend "flash", partial: "shared/flash" %>
<% else %>
  <%= open_modal("New Book", render("admin/books/form", book: @book)) %>
<% end %>
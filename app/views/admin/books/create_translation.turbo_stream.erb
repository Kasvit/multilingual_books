<% if @translation.errors.empty? %>
  <%= close_modal %>
  <%= turbo_stream.replace "admin_book_#{@book.id}", partial: "admin/books/book", locals: { book: @book } %>
  <%= turbo_stream.replace "book_#{@book.id}", partial: "books/book", locals: { book: @book } %>
  <%= turbo_stream.prepend "flash", partial: "shared/flash" %>
<% else %>
  <%= open_modal("Edit Book", render("admin/books/translation_form", book: @translation)) %>
<% end %>

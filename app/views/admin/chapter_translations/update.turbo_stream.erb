<% if @translation.errors.empty? %>
  <%= close_modal %>
  <%= turbo_stream.replace "admin_chapter_#{@chapter.id}_translations_#{@translation.id}", partial: 'admin/chapter_translations/chapter_translation', locals: { chapter: @chapter, translation: @translation } %>
  <%= turbo_stream.prepend "flash", partial: "shared/flash" %>
<% else %>
  <%= open_modal("Edit Translation", render("admin/chapter_translations/form", book: @book, chapter: @chapter, translation: @translation)) %>
<% end %>

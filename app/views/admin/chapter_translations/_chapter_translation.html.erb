<div id="admin_chapter_<%= chapter.id %>_translations_<%= translation.id %>">
  <div class="bg-gray-50 rounded-lg p-4">
    <div class="flex justify-between items-center mb-2">
      <span class="font-semibold"><%= translation.language.upcase %></span>
      <div class="flex space-x-2">
        <%= link_to "Edit",
            edit_admin_book_chapter_chapter_translation_path(@book, @chapter.id, translation.id),
            class: "btn btn-ghost",
            data: { turbo_frame: "modal" } %>
        <%= button_to "Remove",
            admin_book_chapter_chapter_translation_path(@book, @chapter.id, translation.id),
            method: :delete,
            class: "btn btn-error",
            form: { data: { turbo_confirm: "Are you sure?" } } %>
      </div>
    </div>
    <div class="mb-2">
      <span class="text-gray-600">Title:</span>
      <div class="ml-2"><%= translation.title %></div>
    </div>
    <div>
      <span class="text-gray-600">Content:</span>
      <div class="ml-2 mt-2 prose max-w-none">
        <%= translation.content || "No content yet" %>
      </div>
    </div>
  </div>
</div>

<%= form_with(model: [book, chapter, translation],
              url: translation.new_record? ?
                   admin_book_chapter_chapter_translations_path(book, chapter.id) :
                   admin_book_chapter_chapter_translation_path(book, chapter.id, translation.id),
              class: "space-y-4 w-96 lg:w-[40rem]") do |f| %>

  <div>
    <%= f.label :language, class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :language,
                options_for_select(chapter.book.selected_languages - (chapter.chapter_translations.pluck(:language) - [translation.language]), translation.language),
                {},
                class: "mt-1 block w-full rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 #{'border-red-500' if translation.errors[:language].any?}" %>
    <% if translation.errors[:language].any? %>
      <p class="text-red-500 text-sm mt-1"><%= translation.errors[:language].join(', ') %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :title, class: "mt-1 block w-full rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 #{'border-red-500' if translation.errors[:title].any?}" %>
    <% if translation.errors[:title].any? %>
      <p class="text-red-500 text-sm mt-1"><%= translation.errors[:title].join(', ') %></p>
    <% end %>
  </div>

  <div>
    <%= f.label :content, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :content, rows: 10, class: "mt-1 block w-full rounded-md shadow-sm focus:border-blue-500 focus:ring-blue-500 #{'border-red-500' if translation.errors[:content].any?}" %>
    <% if translation.errors[:content].any? %>
      <p class="text-red-500 text-sm mt-1"><%= translation.errors[:content].join(', ') %></p>
    <% end %>
  </div>

  <div class="flex justify-end space-x-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= button_tag "Cancel", type: "button", data: { action: "modal#close" }, class: "btn btn-ghost" %>
  </div>
<% end %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-lg p-6 mb-8" data-controller="tabs">
      <div class="border-b border-gray-200 mb-6">
        <nav class="-mb-px flex space-x-8" aria-label="Tabs">
          <% @book.book_translations.each_with_index do |translation, index| %>
            <button type="button"
                    data-tabs-target="tab"
                    data-action="click->tabs#showTranslation"
                    data-language="<%= translation.language %>"
                    class="tab-button">
              <%= translation.language.upcase %>
            </button>
          <% end %>
        </nav>
      </div>

      <div>
        <% @book.book_translations.each_with_index do |translation, index| %>
          <div data-tabs-target="content"
               data-language="<%= translation.language %>"
               class="translation-content hidden">
            <h1 class="text-3xl font-bold mb-2">
              <%= translation.title %>
              <span class="text-lg font-normal text-gray-600">(<%= translation.language.upcase %>)</span>
            </h1>
            <p class="text-gray-700"><%= translation.description %></p>
          </div>
        <% end %>
      </div>

      <div class="text-sm text-gray-500 mt-6">
        <div>ISBN: <%= @book.isbn %></div>
        <div>Доступні мови: <%= @book.selected_languages.map(&:upcase).join(", ") %></div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
      <h2 class="text-xl font-bold mb-4">Зміст</h2>
      <div class="space-y-2">
        <% @book.chapters.each do |chapter| %>
          <%= link_to "Розділ #{chapter.position}", book_chapter_path(@book, chapter.position), 
              class: "block text-blue-600 hover:text-blue-800 transition-colors" %>
        <% end %>
      </div>
    </div>

    <div class="mt-6">
      <%= link_to "← Назад до списку книг", books_path, 
          class: "text-blue-600 hover:text-blue-800 transition-colors" %>
    </div>
  </div>
</div> 
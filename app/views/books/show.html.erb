<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow p-6">
    <div class="mb-6">
      <h1 class="text-2xl font-bold mb-4">Book Details</h1>

      <%= render "translations", book: @book %>

      <div class="mb-4">
        <strong>ISBN:</strong>
        <%= @book.isbn %>
      </div>

      <div class="mb-4">
        <strong>Selected Languages:</strong>
        <%= @book.selected_languages.join(", ") %>
      </div>

      <div class="mt-8">
        <div class="flex justify-between items-center mb-4">
          <h2 class="text-xl font-semibold">Chapters</h2>
          <%= link_to "New Chapter", new_book_chapter_path(@book),
              class: "btn-primary",
              data: { turbo_frame: "modal" } %>
        </div>

        <%= turbo_frame_tag "chapters" do %>
          <div class="space-y-4">
            <%= render @book.chapters.includes(:chapter_translations).order(:position) %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="flex space-x-2">
      <%= link_to "Edit", edit_book_path(@book), class: "btn-secondary", data: { turbo_frame: "modal" } %>
      <%= link_to "Back", books_path, class: "btn-secondary" %>
    </div>
  </div>

  <%= turbo_frame_tag "modal" %>
</div>

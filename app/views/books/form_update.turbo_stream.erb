<%= turbo_stream.update "modal" do %>
  <div class="modal">
    <div class="modal-content">
      <h2 class="text-2xl font-bold mb-4"><%= @book.new_record? ? "New Book" : "Edit Book" %></h2>
      <%= render "form", book: @book %>
    </div>
  </div>
<% end %>

<%= turbo_stream.append "flash" do %>
  <% if @book.errors.any? %>
    <div class="flash-message fixed top-4 right-4 p-4 rounded-lg shadow-lg bg-red-100 text-red-800"
         data-controller="flash">
      <div class="flex items-center justify-between">
        <div class="mr-4">
          <%= @book.errors.full_messages.to_sentence %>
        </div>
        <button type="button"
                data-action="flash#dismiss"
                class="text-gray-500 hover:text-gray-700 focus:outline-none">
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
    </div>
  <% end %>
<% end %>

<%= turbo_frame_tag dom_id(book), class: "bg-white rounded-lg shadow-lg overflow-hidden" do %>
  <div class="p-6">
    <% book.book_translations.each do |translation| %>
        <h2 class="text-xl font-semibold mb-2">
        <%= translation.title %>
        <span class="text-sm font-normal text-gray-600">(<%= translation.language.upcase %>)</span>
      </h2>
      <p class="text-gray-600 mb-4"><%= translation.description %></p>
    <% end %>

    <div class="mt-4">
      <div class="text-sm text-gray-500">ISBN: <%= book.isbn %></div>
      <div class="text-sm text-gray-500">
        Мови: <%= book.selected_languages.map(&:upcase).join(", ") %>
      </div>
    </div>

    <div class="mt-6">
      <%= link_to "Читати", book_path(book), class: "inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors", data: { turbo_frame: "_top"} %>
    </div>
  </div>
<% end %>

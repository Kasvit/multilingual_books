<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-8">Книги</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @books.each do |book| %>
      <div class="bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="p-6">
          <% book.book_translations.each do |translation| %>
            <h2 class="text-xl font-semibold mb-2">
              <%= translation.title %> 
              <span class="text-sm font-normal text-gray-600">(<%= translation.language.upcase %>)</span>
            </h2>
            <p class="text-gray-600 mb-4"><%= translation.description %></p>
          <% end %>

          <div class="mt-4">
            <div class="text-sm text-gray-500">ISBN: <%= book.isbn %></div>
            <div class="text-sm text-gray-500">
              Мови: <%= book.selected_languages.map(&:upcase).join(", ") %>
            </div>
          </div>

          <div class="mt-6">
            <%= link_to "Читати", book_path(book), class: "inline-block bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> 
<%= turbo_frame_tag "modal" do %>
  <div data-controller="modal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50" data-action="click@window->modal#closeBackground">
    <div class="bg-white rounded-lg shadow-lg w-96">
      <!-- Header -->
      <div class="modal-header p-4 border-b border-gray-200">
        <h2 class="text-xl font-bold"><%= title %></h2>
      </div>

      <!-- Content -->
      <div class="modal-content p-4">
        <%= content %>
      </div>

      <!-- Footer -->
      <% if footer.present? %>
        <div class="modal-footer p-4 border-t border-gray-200">
          <%= footer %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

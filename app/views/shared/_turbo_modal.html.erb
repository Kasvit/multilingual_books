<%= turbo_frame_tag "modal" do %>
  <div data-controller="turbo-modal" class="fixed inset-0 z-50 flex items-center justify-center bg-black bg-opacity-50" data-action="click@window->turbo-modal#closeBackground">
    <div class="bg-white rounded-lg shadow-lg w-96">
      <div class="modal-header p-4 border-b border-gray-200">
        <h2 class="text-xl font-bold"><%= title %></h2>
      </div>

      <div class="modal-content p-4">
        <%= content %>
      </div>

      <div class="modal-footer p-4 border-t border-gray-200">
        <%= footer %>
      </div>
    </div>
  </div>
<% end %>
